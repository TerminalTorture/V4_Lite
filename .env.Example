# MQTT Configuration
# Copy this file to .env and update the values according to your MQTT broker setup

# Enable/disable MQTT publishing
MQTT_ENABLED=true

# MQTT Broker Connection Settings
#RPI Address
MQTT_BROKER_HOST=192.168.0.89
MQTT_BROKER_PORT=1883
MQTT_TRANSPORT=websockets
MQTT_WS_PATH=/mqtt
# MQTT Authentication (optional)
# MQTT_USERNAME=your_username
# MQTT_PASSWORD=your_password

# MQTT Client Settings
MQTT_CLIENT_ID=vflow_sensor_client_unitXX
MQTT_BASE_TOPIC=vflow
MQTT_QOS_LEVEL=1

# MQTT Bulk Topic
MQTT_BULK_TOPIC=vflow/data/UNITXX

# Cloud Upload Settings
CLOUD_DEVICE_ID=vflow_sensor_client_unitXX
CLOUD_UPLOAD_ENABLED=true
CLOUD_UPLOAD_PROTOCOLS=mqtt

# Publishing Options
MQTT_PUBLISH_INDIVIDUAL=false

# Data Collection and Upload Settings
DATA_COLLECTION_INTERVAL=5  # seconds between data collection/upload cycles
MQTT_UPLOAD_INTERVAL=2      # seconds between MQTT uploads (independent of data collection)

# Example MQTT Topics that will be used:
# - vflow/data/bulk           (all sensor data in one message)
# - vflow/sensors/{sensor}    (individual sensor values, if enabled)
# - vflow/status              (device status messages)

# Database Configuration (existing)
# DATABASE_URL=sqlite:///instance/sensor_data.db

# Modbus Configuration (existing)
# MODBUS_HOST=192.168.1.100
# MODBUS_PORT=502

# MQTT TLS Configuration
MQTT_USE_TLS=false               # Set to true to enable TLS
MQTT_TLS_CA_CERTS=path/to/ca.crt # Path to your Certificate Authority certificate
# MQTT_TLS_CERTFILE=path/to/client.crt # Optional: Path to client certificate
# MQTT_TLS_KEYFILE=path/to/client.key  # Optional: Path to client private key
# MQTT_TLS_INSECURE=false        # Optional: Set to true to disable hostname verification (NOT recommended for production)
